<div class="max-w-lg mx-auto p-4 space-y-2">
  <% if session[:rows].present? %>
    <% session[:rows].each do |row| %>
      <div class="border p-2 text-sm">
        <div class="flex justify-between items-center">
          <div>Row <%= row[:id] %></div>
          <button id="row-<%= row[:id] %>" data-reflex="click->Example#remove" data-id="<%= row[:id] %>" class="border bg-red-800 text-white p-0.5 rounded mt-4">Remove</button>
        </div>
      </div>
    <% end %>
  <% end %>

  <button data-reflex="click->Example#add" class="border bg-blue-500 text-white p-2 rounded mt-4">Add</button>
</div>